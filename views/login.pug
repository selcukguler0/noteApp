doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(http-equiv='X-UA-Compatible' content='IE=edge')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    link(rel='stylesheet' href='/css/login.css')
    title Document
  body
    #formContent
      // Tabs Titles
      h2.active
        a(href='/' style='color: black;') Home
      if isAuth 
        h2.active
          a(href='/log-out' style='color: black;') Logout
    .wrapper.fadeInDown
      #formContent
        // Tabs Titles
        h2.active  Sign In 
        br
        h4(style="color:black") #{error}
        form(method="post" action="/login")
          input#login.fadeIn.second(type='text' name='email' placeholder='Email')
          input#password.fadeIn.third(type='text' name='password' placeholder='Password')
          input.fadeIn.fourth(type='submit' value='Log In')
        // Remind Passowrd
        #formFooter
          a.underlineHover(href='#') Forgot Password?
